generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "darwin-arm64"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int @id @default(autoincrement())
  username  String @unique
  email     String @unique
  password  String
  firstName String
  lastName  String
  posts     Post[]
}

model Post {
  id      Int @id @default(autoincrement())
  content String
  userId  Int
  user    User    @relation(fields: [userId], references: [id])
  likes    Int      @default(0)
  createdAt DateTime @default(now())
}

