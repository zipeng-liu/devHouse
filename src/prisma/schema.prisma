generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "darwin-arm64"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int    @id @default(autoincrement())
  username  String @unique
  email     String @unique
  password  String
  firstName String
  lastName  String
  posts     Post[]
}

model Post {
  id        Int      @id @default(autoincrement())
  content   String
  userId    Int
  user      User      @relation(fields: [userId], references: [id])
  message   String
  createdAt DateTime
  likes     Int
  comments  Comment[]
}

model Comment {
  id        Int      @id @default(autoincrement())
  postId    Int
  post      Post     @relation(fields: [postId], references: [id])
  userId    Int
  createdAt DateTime
  message   String
}
